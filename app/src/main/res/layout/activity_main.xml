<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_lakeTahoe"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/download"
        android:contentDescription="@string/lakeTahoe"/>

    <TextView
        android:id="@+id/textView_lakeTahoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/lakeTahoe"
        android:textColor="@color/blue"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_lakeTahoe"
        app:layout_constraintTop_toBottomOf="@+id/imageView_lakeTahoe" />

    <TextView
        android:id="@+id/textView_lakeTahoeInformation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:lineSpacingExtra="4sp"
        android:maxLines="16"
        android:text="@string/lakeTahoe_information"
        android:textSize="15sp"
        android:textStyle="italic"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView_lakeTahoe"
        app:layout_constraintStart_toStartOf="@+id/textView_lakeTahoe"
        app:layout_constraintTop_toBottomOf="@+id/textView_lakeTahoe" />
</androidx.constraintlayout.widget.ConstraintLayout>
